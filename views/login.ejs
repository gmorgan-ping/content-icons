<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign In</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Google Material Icons -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
  <!-- Custom Styles -->
  <link rel="stylesheet" href="/public/styles.css">
</head>

<body class="bg-light">
  <div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
    <div class="card shadow" style="width: 400px; max-width: 90vw;">
      <div class="card-header text-center" style="background-color: #6c757d; color: white;">
        <h3 class="mb-0">
          <i class="material-icons-outlined me-2" style="vertical-align: middle;">security</i>
          Sign In
        </h3>
      </div>
      <div class="card-body p-4">
        <p class="text-center text-muted mb-4">Enter password to continue</p>

        <% if (error) { %>
          <div class="alert alert-danger" role="alert">
            <i class="material-icons-outlined me-2" style="vertical-align: middle; font-size: 18px;">error</i>
            <%= error %>
          </div>
          <% } %>

            <form method="POST" action="/login">
              <div class="mb-3">

                <div class="input-group">
                  <span class="input-group-text">
                    <i class="material-icons-outlined">lock</i>
                  </span>
                  <input type="password" class="form-control" id="password" name="password" required
                    placeholder="Enter password" autocomplete="current-password">
                </div>
              </div>

              <div class="d-grid">
                <button type="submit" class="btn"
                  style="background-color: #6c757d; border-color: #6c757d; color: white;">

                  Continue
                </button>
              </div>
            </form>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Focus on password field when page loads
    document.addEventListener('DOMContentLoaded', function () {
      document.getElementById('password').focus();
    });

    // Handle enter key on password field
    document.getElementById('password').addEventListener('keypress', function (e) {
      if (e.key === 'Enter') {
        e.target.closest('form').submit();
      }
    });
  </script>
</body>

</html>